@using BLL.DTO
@model List<GroupsDTO>

<style>
    .card.clickable-card:hover {      
        cursor: pointer; /* Изменение курсора */
        border: solid 1px #f0f0f0
    }
</style>

<H1 class="mt-3 mb-3">Ваши группы</H1>
<div class="row mt-3" id="groupCards">
    @foreach (var schedule in Model)
    {
        <div class="col-md-4 mb-3">
            <a href="@Url.Action("Students", "User", new { groupId = schedule.Id })" class="card clickable-card">
                <div class="card-body">
                    <h5 class="card-title">@schedule.NameGroup - @schedule.Course@schedule.NumberGroup</h5>
                </div>
            </a>
        </div>
    }
</div>
