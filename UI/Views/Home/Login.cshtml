@{
    ViewData["Title"] = "Login";
}
@Html.AntiForgeryToken()
<section class="p-3 p-md-4 p-xl-5">
    <div class="container">
        <div class="card border-light-subtle shadow-sm">
            <div class="row g-0">
                <div class="col-12 col-md-6">
                    <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.webp"
                         class="img-fluid" alt="Sample image">
                </div>
                <div class="col-12 col-md-6">
                    <div class="card-body p-3 p-md-4 p-xl-5">
                        <div class="row">
                            <div class="col-12">
                                <div class="mb-5">
                                    <h3>Вход</h3>
                                </div>
                            </div>
                        </div>
                        <form id="loginForm">
                            <div class="row gy-3 gy-md-4 overflow-hidden">
                                <div class="col-12">
                                    <label for="username" class="form-label">Login <span class="text-danger">*</span></label>
                                    <input type="text" class="form-control" name="username" id="username" required>
                                </div>
                                <div class="col-12">
                                    <label for="password" class="form-label">Password <span class="text-danger">*</span></label>
                                    <input type="password" class="form-control" name="password" id="password" value="" required>
                                </div>                             
                                <div class="col-12">
                                    <div class="d-grid">
                                        <button class="btn bsb-btn-xl btn-primary" type="submit">Войти</button>
                                    </div>
                                </div>
                            </div>
                        </form>  
                        <div id="message" class="mt-3">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    $('#loginForm').submit(function (event) {
        event.preventDefault();

        var username = $('#username').val();
        var password = $('#password').val();

        $.ajax({
            url: '/User/Login', // Путь к методу в контроллере
            type: 'POST',
            headers: {
                RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val() // AntiForgeryToken
            },
            data: {
                username: username,
                password: password
            },
            success: function (response) {
                // Обработка успешного входа
                $('#message').text(response);

                // Ждем 2 секунды (2000 миллисекунд) перед редиректом
                setTimeout(function () {
                    window.location.href = '/Home/Index';
                }, 1000);
            },
            error: function (error) {
                // Обработка ошибок входа
                $('#message').text(error.responseText);
            }
        });
    });
</script>
